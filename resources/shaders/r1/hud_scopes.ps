#include "common.h"

struct 	v2p
{
 	float2 	tc0		: TEXCOORD0;	// base
	float4 c0		: COLOR0;
};
#define TAR float(1024.f/768.f)	//texture aspect ratio
uniform float4 c_screen;
//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
float4 	main	( v2p I )	: COLOR
{
	float2 tc = I.tc0;
	float x = 1/(c_screen.y*TAR);
	tc.x = tc.x*x + 0.5*(1 - x);
	float4 col = tex2D	(s_base,tc);
	return I.c0*col;
}
