            : # args
            : # input files
            : # requirements

              # borland warns so often that successful compilation is prevented.
                <borland><*><cxxflags>"-w-8026 -w-8027 -w-8057 -w-8084 -w-8092"
                <kylix><*><cxxflags>"-w-8026 -w-8027 -w-8057 -w-8084 -w-8092"
          ]
