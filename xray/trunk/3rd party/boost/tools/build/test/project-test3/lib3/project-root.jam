
use-project /lib2/helper : ../lib2/helper ;

import property ;

rule mfc-compile ( target : sources * : property-set * )
{
    PROPERTIES on $(target) = [ property.as-path $(property-set) ] ;
}

actions mfc-compile
{
    echo $(PROPERTIES) > $(<)
    echo $(>) >> $(<)
}

IMPORT $(__name__) : mfc-compile : : mfc-compile ;
